@model RoomType

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-center">
    <div class="card shadow mt-5 w-50">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Floor Detail</h6>
        </div>
        <div class="card-body mt-3">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.RoomTypeName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.RoomTypeName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.QuantityBed)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.QuantityBed)
                </dd>
            </dl>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.RoomTypeId">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
