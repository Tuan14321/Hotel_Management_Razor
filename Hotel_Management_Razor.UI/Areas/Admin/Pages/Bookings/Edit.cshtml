@page
@model Hotel_Management_Razor.UI.Areas.Admin.Pages.Bookings.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Booking.BookingId" />
            <div class="form-group">
                <label asp-for="Booking.CustomerId" class="control-label"></label>
                <select asp-for="Booking.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="Booking.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.RoomId" class="control-label"></label>
                <select asp-for="Booking.RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
                <span asp-validation-for="Booking.RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.CheckInTime" class="control-label"></label>
                <input asp-for="Booking.CheckInTime" class="form-control" />
                <span asp-validation-for="Booking.CheckInTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.CheckOutTime" class="control-label"></label>
                <input asp-for="Booking.CheckOutTime" class="form-control" />
                <span asp-validation-for="Booking.CheckOutTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.UserId" class="control-label"></label>
                <select asp-for="Booking.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Booking.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.DepartmentId" class="control-label"></label>
                <select asp-for="Booking.DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                <span asp-validation-for="Booking.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.TotalPrice" class="control-label"></label>
                <input asp-for="Booking.TotalPrice" class="form-control" />
                <span asp-validation-for="Booking.TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
