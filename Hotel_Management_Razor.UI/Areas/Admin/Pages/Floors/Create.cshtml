@page
@model Hotel_Management_Razor.UI.Areas.Admin.Pages.Floors.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-center">
    <div class="card shadow mt-5 w-50">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Create New Floor</h6>
        </div>
        <div class="card-body mt-2">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Floor.FloorName" class="control-label"></label>
                    <input asp-for="Floor.FloorName" class="form-control" />
                    <span asp-validation-for="Floor.FloorName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-page="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
