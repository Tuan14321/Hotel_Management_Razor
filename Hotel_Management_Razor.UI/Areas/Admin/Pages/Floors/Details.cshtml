@page
@model Hotel_Management_Razor.UI.Areas.Admin.Pages.Floors.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-center">
    <div class="card shadow mt-5 w-50">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Floor Detail</h6>
        </div>
        <div class="card-body mt-2">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Floor.FloorName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Floor.FloorName)
                </dd>
            </dl>
            <div>
                <a asp-page="./Edit" asp-route-id="@Model.Floor?.FloorId">Edit</a> |
                <a asp-page="./Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
