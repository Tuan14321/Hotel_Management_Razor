@page
@model Hotel_Management_Razor.UI.Areas.Admin.Pages.RoomTypes.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>

<h4>RoomType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoomType.RoomTypeId" />
            <div class="form-group">
                <label asp-for="RoomType.RoomTypeName" class="control-label"></label>
                <input asp-for="RoomType.RoomTypeName" class="form-control" />
                <span asp-validation-for="RoomType.RoomTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomType.Price" class="control-label"></label>
                <input asp-for="RoomType.Price" class="form-control" />
                <span asp-validation-for="RoomType.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomType.QuantityBed" class="control-label"></label>
                <input asp-for="RoomType.QuantityBed" class="form-control" />
                <span asp-validation-for="RoomType.QuantityBed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
