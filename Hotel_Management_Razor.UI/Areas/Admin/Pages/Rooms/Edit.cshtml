@page
@model Hotel_Management_Razor.UI.Areas.Admin.Pages.Rooms.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Room.RoomId" />
            <div class="form-group">
                <label asp-for="Room.RoomName" class="control-label"></label>
                <input asp-for="Room.RoomName" class="form-control" />
                <span asp-validation-for="Room.RoomName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.StatusId" class="control-label"></label>
                <select asp-for="Room.StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
                <span asp-validation-for="Room.StatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.FloorId" class="control-label"></label>
                <select asp-for="Room.FloorId" class="form-control" asp-items="ViewBag.FloorId"></select>
                <span asp-validation-for="Room.FloorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.RoomTypeId" class="control-label"></label>
                <select asp-for="Room.RoomTypeId" class="form-control" asp-items="ViewBag.RoomTypeId"></select>
                <span asp-validation-for="Room.RoomTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
